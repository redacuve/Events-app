<% provide(:title, 'Sign Up') %>

<%= form_with(model: @user, local: true, class: 'form-signup') do |form| %>
    <h1 class="h3 mb-3 font-weight-normal">Sign Up Now!</h1>
    <% if @user.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this User from being saved:</h2>

        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>


    <div class="field">
        <%= form.label(:name) %>
        <%= form.text_field(:name, class: 'form-control', placeholder: 'Full name', required: true) %>
    </div>

    <div class="field">
        <%= form.label(:email) %>
        <%= form.email_field(:email, class: 'form-control', placeholder: 'Email address', required: true) %>
    </div>

    <br>

    <div class="actions">
        <%= form.submit("Sign Up", class: 'btn btn-lg btn-primary btn-block') %>
    </div>

<% end %>