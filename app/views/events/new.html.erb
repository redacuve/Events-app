<section class="container">
  <h2 class="col-sm-6 m-auto py-3">Event information: </h2>
  <div class= "col-sm-6 m-auto ">
    <%= form_with model: @event, local: true do |f| %>
      <% if @event.errors.any? %>
        <div id="error_explanation">
        <ul>
            <% @event.errors.full_messages.each do |message| %>
                <li class="text-danger"><%= message %></li>
            <% end %>
        </ul>
        </div>
      <% end %>
      <%= f.hidden_field :organizer_id, value: @current_user.id %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class:'form-control', required: true %>
      </div>
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class:'form-control', required: true %>
      </div>
       <div class="form-group">
        <%= f.label :place %>
        <%= f.text_field :place, class:'form-control', required: true %>
      </div>
        <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class:'form-control', required: true %>
      </div>
    <%= f.submit 'Create Event', class:"btn btn-primary" %>
    <% end %>
  </div>
</section>